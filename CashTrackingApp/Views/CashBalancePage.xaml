             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:CashTrackingApp.ViewModels"
             x:Class="CashTrackingApp.Views.CashBalancePage"
             Title="Cash Balance"
             BackgroundColor="Black">

    <ContentPage.BindingContext>
        <vm:CashViewModel />
    </ContentPage.BindingContext>

    <StackLayout Padding="20" Spacing="15" VerticalOptions="Center">
        <Label Text="Current Balance:"
               FontSize="Large"
               TextColor="White"
               HorizontalOptions="Center" />

        <Label Text="{Binding Balance, StringFormat='Â£{0:N2}'}"
               FontSize="24"
               TextColor="LimeGreen"
               HorizontalOptions="Center" />

        <!-- More UI elements can be added here later -->
    </StackLayout>
</ContentPage>
